<% if params[:modal_param] %>
  <button type="button" class="btn btn-primary d-none" data-bs-toggle="modal" data-bs-target="#staticBackdrop" data-controller="study-session-end">
    Launch static backdrop modal
  </button>
<% end %>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header" id="header">
        <h1 class="modal-title " id="staticBackdropLabel">Session complete</h1>
        <%= link_to profile_path do %>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        <% end %>
      </div>
      <div class="modal-body">
        <p><%= @end_greetings.sample %> What would you like to do next?</p>
        <!-- this modal pops up on the profile page once the session is completed -->
        <!-- this is where we want to offer two buttons -->
        <!-- first - restart session that will take you to the same template as the session you just completed -->
        <!-- second - option to exit -->
      </div>
      <div class="modal-footer">
        <%= link_to profile_path do %>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">exit</button>
        <% end %>
        <%= link_to theme_study_sessions_path(@last_theme), data: { turbo_method: :post } do %>
          <button type="button" class="btn btn-primary" >repeat</button>
        <% end %>
      </div>
    </div>
  </div>
</div>
