<div class="topic-container">
  <div class="topic-list">
    <h2 class="topic-heading">Topic List</h2>
    <div class="topic-form">

      <a class="btn btn-primary" data-bs-toggle="collapse" href="#multiCollapseExample1" role="button" aria-expanded="false" aria-controls="multiCollapseExample1">add topic</a>
      <div class="collapse multi-collapse" id="multiCollapseExample1">
        <div class="card card-body">
        <%= simple_form_for @topic do |f| %>
        <%= f.input :name %>
        <%= f.button :submit %>
        <% end %>
        </div>
      </div>
    </div>
    <div class="topic-items">
      <ul>
        <% @topics.each do |topic|  %>
        <li> <%= topic.name %> </li>
      </ul>
        <% end %>
    </div>
  </div>
</div>
