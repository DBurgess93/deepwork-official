<div class="theme-form-container d-none">
  <div class="form-header">
    <%= simple_form_for @theme do |f| %>
      <%= f.input :name %>
      <%= f.input :study_duration %>
      <%= f.input :break_duration %>
      <%= f.input :block_amount %>
      <%= f.input :background %>
      <%= f.input :music %>
      <div class="text-center">
        <%= f.button :submit, "Create theme", class:"primary-button w-75 mb-3" %>
      </div>
    <% end %>
  </div>
</div>
